{
  "clusters": [
    {
      "nodes": [
      {% for node in groups.kubelets %}
        {
          "node": {
            "hostnames": {
              "manage": [
                "{{ node }}"
              ],
              "storage": [
                "{{ hostvars[node].ansible_ssh_host }}"
              ]
            },
            "zone": 1
          },
          "devices": [
            "{{ gluster_disk }}"
          ]
        }{% if not loop.last %},{% endif %}
      {% endfor %}
      ]
    }
  ]
}
